# Production Environment Variables for Render
# Copy this to .env.production and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name
# OR use individual variables:
# DATABASE_HOST=your-postgres-host.render.com
# DATABASE_USER=your_username
# DATABASE_NAME=your_database_name
# DATABASE_PASSWORD=your_password
# DATABASE_PORT=5432

# Environment
NODE_ENV=production
PORT=10000

# CORS Origins (add your frontend domain)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Optional: Disable ML detection in production if models aren't available
DISABLE_ML_DETECTION=false 